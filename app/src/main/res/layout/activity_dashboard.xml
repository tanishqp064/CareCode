<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:src="@drawable/carecode"
            android:id="@+id/ivProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvName"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"  android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView android:id="@+id/tvGender"
            android:text="Gender"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView android:id="@+id/tvAge"
            android:text="Age"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView android:id="@+id/tvMobile"
            android:text="Mobile"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView android:id="@+id/tvDoctor"
            android:text="Doctor"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView android:id="@+id/tvDisease"
            android:text="Disease"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/btnMyMedicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Medicines"
            android:layout_marginTop="32dp" />

    </LinearLayout>
</ScrollView>
